{
  "name": "as-core",
  "version": "0.1.0",
  "description": "AgentScript Core Model modules without Views",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/backspaces/as-core.git"
  },
  "keywords": [
    "NetLogo",
    "ABM",
    "AgentScript"
  ],
  "author": "Owen Densmore",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/backspaces/as-core/issues"
  },
  "homepage": "https://github.com/backspaces/as-core",
  "mkdirs": [
    "dist",
    "docs/dist",
    "docs/models"
  ],
  "scripts": {
    "clean": "rm -rf `bin/pkgkey.js mkdirs` && mkdir `bin/pkgkey.js mkdirs`",
    "build": "yarn run clean && yarn run build-dist && yarn run minify && yarn run build-docs",
    "minify": "squash dist/AS.js > dist/AS.min.js && squash dist/AS.module.js > dist/AS.module.min.js",
    "build-docs": "cp -Rp README.md dist docs && bin/docsmodels.sh",
    "build-dist": "rollup -c",
    "test": "ava --verbose"
  },
  "devDependencies": {
    "ava": "^0.24.0",
    "butternut": "^0.4.6",
    "rollup": "^0.53.3",
    "shelljs": "^0.7.8",
    "tap-xunit": "^2.2.0"
  }
}
