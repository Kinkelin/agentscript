{
  "name": "as-core",
  "version": "0.1.0",
  "description": "AgentScript Core Model modules without Views",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/backspaces/as-core.git"
  },
  "keywords": [
    "NetLogo",
    "ABM",
    "AgentScript"
  ],
  "author": "Owen Densmore",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/backspaces/as-core/issues"
  },
  "homepage": "https://github.com/backspaces/as-core",
  "mkdirs": "dist docs/dist docs/models",
  "scripts": {
    "clean": "cross-env-shell \"shx rm -rf $npm_package_mkdirs && shx mkdir $npm_package_mkdirs\"",
    "build": "npm-run-all clean build-dist minify build-docs",
    "minify": "squash dist/AS.js > dist/AS.min.js && squash dist/AS.module.js > dist/AS.module.min.js",
    "build-docs": "shx cp -R README.md dist docs && node bin/docsmodels.js",
    "build-dist": "rollup -c",
    "test": "ava --verbose",
    "foo": "ava test/test.js"
  },
  "devDependencies": {
    "ava": "^0.25.0",
    "butternut": "^0.4.6",
    "cross-env": "^5.1.3",
    "npm-run-all": "^4.1.2",
    "rollup": "^0.55.5",
    "shelljs": "^0.8.1",
    "shx": "^0.2.2",
    "tap-xunit": "^2.2.0"
  }
}
