{
    "name": "@redfish/agentscript",
    "version": "0.4.2",
    "description": "AgentScript Model in Model/View architecture",
    "author": "Owen Densmore",
    "homepage": "https://github.com/backspaces/agentscript",
    "main": "dist/agentscript.umd.js",
    "module": "dist/agentscript.esm.js",
    "files": [
        "/dist/",
        "/docs/"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/backspaces/agentscript.git"
    },
    "keywords": [
        "netlogo",
        "abm",
        "agentscript"
    ],
    "license": "GPL-3.0",
    "bugs": {
        "url": "https://github.com/backspaces/agentscript/issues"
    },
    "mkdirs": "dist docs",
    "scripts": {
        "clean": "shx rm -rf $npm_package_mkdirs && shx mkdir $npm_package_mkdirs",
        "build": "npm-run-all clean build-dist minify build-docs",
        "minify": "terser dist/agentscript.umd.js > dist/agentscript.umd.min.js && terser dist/agentscript.esm.js > dist/agentscript.esm.min.js",
        "build-docs": "shx cp -R README.md _config.yml models dist tests src docs && node bin/docsmodels.js && node bin/docsscripts.js",
        "build-dist": "rollup -c",
        "test": "ava",
        "pup": "ava test/models.js",
        "foo": "shx echo theme: jekyll-theme-architect > docs/_config.yml"
    },
    "Note": "shx includes shelljs; tap-xunit for circleci/ava.",
    "devDependencies": {
        "ava": "0.25.0",
        "cross-env": "5.1.3",
        "live-server": "1.2.0",
        "npm-run-all": "4.1.2",
        "puppeteer": "1.9.0",
        "rollup": "0.55.5",
        "shx": "0.2.2",
        "tap-xunit": "2.2.0",
        "terser": "^3.10.11"
    }
}
